---
const { background } = Astro.props;
---

<div
  class:list={[
    "inline-flex items-center justify-center select-none whitespace-nowrap rounded-full py-2 px-1.5 lg:px-2.5 font-sans text-xs lg:text-sm font-bold leading-none text-white",
    {
      [background]: background,
      "bg-blue-400": !background
    }
  ]}
  style={Astro.props.style}
>
  <div class="flex items-center justify-center">
    <slot />
  </div>
</div>
