---
import { Image } from "astro:assets";
import { Wikipedia, Wikipedia2, Wikipedia3 } from "../images/images.js";


interface Props {
	name: string;
	imageSrc: string;
	description: string;
	role: string;
    currentJob: string;
    currentProject: string;
    education: string;
    languages: string;
}

const { 
  name,
  imageSrc,
  description,
  role,
  currentJob,
  currentProject,
  education,
  languages, } = Astro.props;
---

<div class="p-4">
    {/* wikipedia logo */}
    <div class="flex justify-between">
      <div class="flex justify-center items-center">
        <Image
          src={Wikipedia}
          alt="Wikipedia logo"
          class="pb-2"
          width={100}
          height={200}
          decoding="async" 
          loading="lazy"
        />
        <span class="mx-2">
          <Image
            src={Wikipedia2}
            alt="Wikipedia logo title"
            class="pb-2"
            width={100}
            height={200}
            decoding="async" 
            loading="lazy"
          />
          <Image
            src={Wikipedia3}
            alt="Wikipedia logo description"
            class="pb-2"
            width={100}
            height={150}
            decoding="async" 
            loading="lazy"
          />
        </span>
      </div>
      <div class="hidden md:flex items-center">
        <input
          type="text"
          placeholder="Search Wikipedia..."
          class="px-6 py-2 border border-gray-300 focus:outline-none"
        />
        <button class="px-6 py-2 bg-slate-300 text-black lg:hover:bg-slate-400 focus:outline-none">
          Search
        </button>
      </div>
    </div>

    <div class="flex items-center pb-1">
      <h1 class="text-3xl font-bold">{name}</h1>
    </div>
    <div class="pb-4">
      <div class="h-px bg-gray-300 flex-1"></div>
    </div>
    <div class="flex flex-col items-center xl:items-start xl:flex-row">
      <div class="text-gray-700">
        <ul>
          {description.map((item, index) => (
            <li key={index} class="pb-3">
              {item}
            </li>
          ))}
        </ul>
      </div>
      <div class="ml-4 sm:w-1/2 xl:w-full rounded bg-slate-300">
        <h1 class="text-xl text-black font-semibold p-1 text-center">
          {name}
        </h1>
        <div class="flex justify-center">
          <Image
            src={imageSrc}
            alt={name}
            class="pb-2"
            width={300}
            height={50}
            decoding="async" 
            loading="lazy"
          />
        </div>
        <div class="text-black text-sm flex p-3 flex-col gap-y-1 ">
          <p>
            <span class="font-bold">Role: </span> {role}
          </p>
          <p>
            <span class="font-bold">Current Job: </span> {currentJob}
          </p>
          <p>
            <span class="font-bold">Project: </span> {currentProject}
          </p>
          <p>
            <span class="font-bold">Education: </span> {education}
          </p>
          <p>
            <span class="font-bold">Languages: </span> {languages}
          </p>
        </div>
      </div>
    </div>
  </div>
